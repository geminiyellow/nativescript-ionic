<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

<scroll-view>
    <stack-layout>
        <stack-layout class="form">
            
            <stack-layout class="form-item ">
                <label text="light" class="input-label" />
                <progress value="10" maxValue="100" col="1" class="ionic-light"/>  
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="stable" class="input-label" />
                <progress value="20" maxValue="100" col="1" class="ionic-stable"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="positive" class="input-label" />
                <progress value="30" maxValue="100" col="1" class="ionic-positive"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="calm" class="input-label" />
                <progress value="40" maxValue="100" col="1" class="ionic-calm"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="balanced" class="input-label" />
                <progress value="50" maxValue="100" col="1" class="ionic-balanced"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="energized" class="input-label" />
                <progress value="60" maxValue="100" col="1" class="ionic-energized"/>  
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="assertive" class="input-label" />
                <progress value="70" maxValue="100" col="1" class="ionic-assertive"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="royal" class="input-label" />
                <progress value="80" maxValue="100" col="1" class="ionic-royal"/>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="dark" class="input-label" />
                <progress value="90" maxValue="100" col="1" class="ionic-dark"/>   
            </stack-layout>
            
        </stack-layout>
    </stack-layout>
    </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
