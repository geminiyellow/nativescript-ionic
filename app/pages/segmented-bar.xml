                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="dark" class="input-label" />
                <SegmentedBar selectedIndex="0" selectedBackgroundColor="#444">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>   
            </stack-layout>
            
        </stack-layout>
    </stack-layout>
    </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>
