<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

<scroll-view>
    <stack-layout>
        <stack-layout class="form">
            
            <stack-layout class="form-item ">
                <label text="light" class="input-label" />
                <SegmentedBar selectedIndex="0" selectedBackgroundColor="#f8f8f8">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar> 
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="stable" class="input-label" />
                <SegmentedBar selectedIndex="1" selectedBackgroundColor="#b2b2b2">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="positive" class="input-label" />
                <SegmentedBar selectedIndex="2" selectedBackgroundColor="#387ef5">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>  
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="calm" class="input-label" />
                <SegmentedBar selectedIndex="1" selectedBackgroundColor="#11c1f3">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="balanced" class="input-label" />
                <SegmentedBar selectedIndex="0" selectedBackgroundColor="#33cd5f">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>    
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="energized" class="input-label" />
                <SegmentedBar selectedIndex="1" selectedBackgroundColor="#ffc900">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>   
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="assertive" class="input-label" />
                <SegmentedBar selectedIndex="2" selectedBackgroundColor="#ef473a">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
                        <SegmentedBarItem title="Item 2" />
                        <SegmentedBarItem title="Item 3" />
                    </SegmentedBar.items>
                </SegmentedBar>    
            </stack-layout>
            
            <stack-layout class="hr" />
            
            <stack-layout class="form-item ">
                <label text="royal" class="input-label" />
                <SegmentedBar selectedIndex="1" selectedBackgroundColor="#886aea">
                    <SegmentedBar.items>
                        <SegmentedBarItem title="Item 1" />
