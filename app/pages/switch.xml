<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

<scroll-view>
    <stack-layout>
        <stack-layout class="form">
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="light" col="0" class="input-label" />
                <switch checked="true" class="switch-light" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="stable" col="0" class="input-label"  />
                <switch checked="true" class="switch-stable" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="positive" col="0" class="input-label"  />
                <switch checked="true" class="switch-positive" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="calm" col="0" class="input-label" />
                <switch checked="true" class="switch-calm" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="balanced" col="0" class="input-label"  />
                <switch checked="true" class="switch-balanced" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="energized" col="0" class="input-label"  />
                <switch checked="true" class="switch-energized" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="assertive" col="0" class="input-label" />
                <switch checked="true" class="switch-assertive" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="royal" col="0" class="input-label"  />
                <switch checked="true" class="switch-royal" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="dark" col="0" class="input-label"  />
                <switch checked="true" class="switch-dark" col="1" />
            </grid-layout>
            
        </stack-layout>
    </stack-layout>
   </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>