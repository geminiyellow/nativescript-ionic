<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

      <scroll-view>
        <stack-layout>
            <StackLayout>
                <Button class="button button-light tns-ionicon-large" style="width:100" text="&#xf2a2;  Medkit" />
                <Button class="button button-stable tns-ionicon-large" text="&#xf100;  Alert" />
                <Button class="button button-positive tns-ionicon-large" style="width:100" text="&#xf3cf; Back" />
                <Button class="button button-calm tns-ionicon-large" text="Hoop it up!  &#xf3e0;" />
                <Button class="button button-balanced tns-ionicon-large" style="width:100" text="&#xf427;  &#xf4ab;  &#xf4ad;  &#xf4a1;" />
                <Button class="button button-energized tns-ionicon-large" text="&#xf4b2;  &#xf4b1;  &#xf4b3;" />
                <Button class="button button-assertive tns-ionicon-large" style="width:100" text="&#xf4c5;  Trash" />
                <Button class="button button-royal tns-ionicon-large" text="&#xf1fb;  Hipster" />
                <Button class="button button-dark tns-ionicon-large" style="width:100" text="&#xf201;  Reload" />
            </StackLayout>
        </stack-layout>
    </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>