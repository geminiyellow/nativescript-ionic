<page xmlns="http://schemas.nativescript.org/tns.xsd"                
      xmlns:sb="nativescript-statusbar" 
      xmlns:drawer="nativescript-telerik-ui/sidedrawer"
      xmlns:widgets="shared/widgets"
      loaded="loaded">
  <page.actionBar>
    <widgets:action-bar-common />
  </page.actionBar>
  
  <sb:status-bar ios:barStyle="light" />
  
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.mainContent>

<scroll-view>
    <stack-layout>
        <stack-layout class="form">

            <grid-layout columns="*, 70" rows="auto" class="form-item item-divider">
                <label text="iOS" col="0" class="input-label" />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="iPod" col="0" class="input-label"  />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
             <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="iPhone" col="0" class="input-label" />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="iPad" col="0" class="input-label"  />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item item-divider">
                <label text="Android" col="0" class="input-label" />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="Nexus 6" col="0" class="input-label"  />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="Nexus 9" col="0" class="input-label" />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
            <stack-layout class="hr" />
            
            <grid-layout columns="*, 70" rows="auto" class="form-item">
                <label text="Android Wear" col="0" class="input-label"  />
                <Button class="button button-positive tns-ionicon-large" style="width:50" text="&#xf30f;" col="1" />
            </grid-layout>
            
        </stack-layout>
    </stack-layout>
   </scroll-view>

    </drawer:rad-side-drawer.mainContent>
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>

</page>